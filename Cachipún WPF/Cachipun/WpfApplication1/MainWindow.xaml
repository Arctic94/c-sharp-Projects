        <Button Content="Revancha" Height="23" HorizontalAlignment="Left" Margin="319,266,0,0" Name="btnRevancha" VerticalAlignment="Top" Width="75" Click="btnRevancha_Click" />
        <Button Content="Cerrar" Height="23" HorizontalAlignment="Left" Margin="416,266,0,0" Name="btnCerrar" VerticalAlignment="Top" Width="75" Click="btnCerrar_Click" />
        <Button Content="Comenzar" Height="23" HorizontalAlignment="Left" Margin="227,12,0,0" Name="btnComenzar" VerticalAlignment="Top" Width="75" Click="btnComenzar_Click" />
    </Grid>
</Window>
